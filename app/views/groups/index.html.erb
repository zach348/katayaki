<div class='row'>
  <div class='small-9 small-centered large-5 large-centered columns'>
    <div class='goal-show'>
      <h3><span class='heading'>Join a Circle</span></h3>
      <div class='row'>
        <div class='small-6 small-centered columns'>
          <%= form_tag groups_path( group: { group_id: current_user.id }), method: :post do %>
            <%= collection_select(:group, :group_id, Group.all, :id, :name, class: 'grp-drpdwn') %>
            <%= submit_tag 'Join Circle', class: 'accept-kat' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
