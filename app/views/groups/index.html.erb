<div class='row'>
  <div class='small-9 small-centered large-5 large-centered columns'>
    <div class='goal-show'>
      <h3><span class='heading'>Join a Circle</span></h3>
      <div class='row'>
        <div class='small-6 small-centered columns'>
          <%= form_tag affiliations_path :affiliations, method: :post do %>
            <%= collection_select(:group, :group_id, Group.all, :id, :name, class: 'grp-drpdwn') %>
            <%= submit_tag 'Join Circle', class: 'btn' %>
          <% end %>
          <h4>Create a Circle</h4>
          <%= form_for @new_group do |f| %>
            <%= f.label :name, class: 'hidden' %>
            <%= f.text_field :name, placeholder: 'Group Name' %>
            <%= f.submit 'Form a New Circle', class: 'btn' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
