<%= stylesheet_link_tag    'application', media: 'all' %>

<div class='row small-12 small-centered columns'>
  <div class='small-8 centered small-centered columns'>
    <%= form_tag(search_path, method: 'get', id: 'search-form', class: 'search') do %>
      <%= text_field_tag :search, params[:search], id: 'searchField' %>
      <%= submit_tag "Search", name: nil, id: 'searchButton', class: 'btn' %>
    <% end %>
  </div>

  <% if @goals.empty? %>
    <h3>Suggest a Katayaki</h3>
  <% else  %>
    <div class="row search-results">
      <div>
        <% @goals.each do |goal| %>
          <div class="goal-list small-9 small-centered columns">
            <h3> <%= link_to goal.title, goal_path(goal) %></h3>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= render 'layouts/footer' %>
