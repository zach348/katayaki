<div class='row'>
  <div class='small-8 centered small-centered columns'>
    <%= form_tag(search_path, method: 'get', id: 'search-form', class: 'search') do %>
      <%= text_field_tag :search, params[:search], id: 'searchField' %>
      <%= submit_tag "Search", name: nil, id: 'searchButton', class: 'search-btn' %>
    <% end %>
  </div>

  <div class='row'>
    <div>
      <% @goals.each do |goal| %>
        <div class='goal-list small-9 small-centered columns'>
          <h3> <%= link_to goal.title, goal_path(goal) %></h3>
        </div>
      <% end %>
      <div class='row'>
        <div class='small-7 small-centered columns'>
          <%= will_paginate @goals, inner_window: 4, outer_window: 4, renderer: FoundationPagination::Rails %>
        </div>
      </div>
    </div>
  </div>
</div>
