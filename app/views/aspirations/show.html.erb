<%= stylesheet_link_tag    'application', media: 'all' %>

<div class='row'>
  <div class='small-9 small-centered large-5 large-centered columns'>
    <div class='goal-show'>
      <h2 class='orange-shadow'> <%= @aspiration.goal.title %> </h2>
      <h4> <%= @aspiration.goal.details %> </h4>
      <h5> (<%= @aspiration.group.name %>) </h5>
      <div class='row'>
        <div class='small-6 small-centered columns'>
          <h4 class='underline orange-shadow'>Touches</h4>
          <h3 class='orange-shadow'><%= @aspiration.votes.count %></h3>
        </div>
      </div>
      <div class='row'>
        <div class='small-6 small-centered columns'>
          <%= button_to 'Remove Katayaki', @aspiration, { method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' } %>
        </div>
      </div>
    </div>
  </div>
</div>
