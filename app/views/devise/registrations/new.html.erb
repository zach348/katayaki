<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
  <%= devise_error_messages! %>

  <div class='row small-8 small-centered columns goal-show'>
    <div class="field small-12 small-centered medium-10 medium-centered large-8 large-centered columns">
      <%= f.label :email, class: 'hidden' %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
    </div>

    <div class="field small-12 small-centered medium-10 medium-centered large-8 large-centered columns">
      <%= f.label :first_name, class: 'hidden' %> <br />
      <%= f.text_field :first_name, placeholder: 'First Name' %>
    </div>

    <div class="field small-12 small-centered medium-10 medium-centered large-8 large-centered columns">
      <%= f.label :last_name, class: 'hidden' %> <br />
      <%= f.text_field :last_name, placeholder: 'Last Name' %>
    </div>

    <div class="field small-12 small-centered medium-10 medium-centered large-8 large-centered columns">
      <%= f.label :password, class: 'hidden' %> <br />
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
    </div>

    <div class="field small-12 small-centered medium-10 medium-centered large-8 large-centered columns">
      <%= f.label :password_confirmation, class: 'hidden' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation' %>
    </div>

    <div class='row'>
      <div class="small-12 small-centered columns"> <br />
        <%= f.submit "Sign up", class: 'btn devise-btn' %>
      </div>
    </div>

  </div>
<% end %>
